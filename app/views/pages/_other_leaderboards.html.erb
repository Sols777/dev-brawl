<div class="leaderboard-container">
  <h3>Best times overall:</h3>
  <ol class="leaderboard-list">
    <% @users_time.each_with_index do |user, index| %>
      <li class=" <%= 'text-danger' if current_user == user %> leaderboard-item <%= 'first-place' if index == 0 %> <%= 'second-place' if index == 1 %> <%= 'third-place' if index == 2 %>">
        <span class="ranking"><%= "#{index + 1}ยบ" %></span>
        <div class="user-card <%= 'bronze-stroke' if index == 2 %>">
          <div class="hexagon"></div>
          <div class="user-info ">
            <span class="username "><%= user.username %></span>
            <span class="score"><%= user.submissions.minimum(:time_taken) %> seconds - <%= user.submissions.order("time_taken ASC").first.challenge.language.name%></span>
          </div>
        </div>
      </li>
    <% end %>
      </ol>
</div>

